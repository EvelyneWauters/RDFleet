<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.springframework.org/schema/webflow
  http://www.springframework.org/schema/webflow/spring-webflow-2.4.xsd">

    <!--<input name="functionalLevel" type="int" />-->


    <view-state id="findcarbyfunctionallevel" view="webflow-findcarbyfunctionallevel">
        <on-render>
            <evaluate expression="carTypeServiceImpl.findCarByFunctionalLevel(1)"
                      result="flowScope.cartypes" />
        </on-render>

        <transition on="proceed" to="webflow-choosecar" />
        <transition on="cancel" to="cancel" bind="false" />
    </view-state>

    <view-state id="webflow-choosecar" view="webflow-choosecar">
        <transition on="next" to="webflow-chooseoptions" />
    </view-state>

    <view-state id="chooseoptions">
        <transition on="confirm" to="webflow-confirmation" />
        <transition on="revise" to="webflow-choosecar" />
        <transition on="cancel" to="webflow-cancellation" />
    </view-state>

    <end-state id="webflow-confirmation" />

    <end-state id="webflow-cancellation" />

</flow>
